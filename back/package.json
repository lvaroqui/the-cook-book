{
  "name": "back",
  "version": "1.0.0",
  "description": "Backend",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/lvaroqui/back",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "concurrently \"nodemon --watch 'src/**/*.ts' --exec 'ts-node' -P tsconfig.json src/index.ts\" \"yarn generate --watch\"",
    "fix": "run-s fix:*",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "apollo-server": "^3.4.1",
    "apollo-server-koa": "^3.3.0",
    "bcrypt": "^5.0.0",
    "email-validator": "^2.0.4",
    "graphql": "^15.5.2",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-helmet": "^6.0.0",
    "pg": "^8.5.0",
    "typeorm": "^0.2.29",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.0",
    "@graphql-codegen/cli": "^2.1.1",
    "@graphql-codegen/typescript": "^2.1.2",
    "@graphql-codegen/typescript-resolvers": "^2.1.2",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^6.0.1",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^16.7.10",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "concurrently": "^6.2.1",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.0.2"
  }
}
